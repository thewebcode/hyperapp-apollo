{
  "name": "hyperapp-apollo",
  "description": "Apollo/GraphQL integration for Hyperapp",
  "version": "0.3.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.mjs",
  "author": "Yuku TAKAHASHI <taka84u9@gmail.com>",
  "license": "MIT",
  "keywords": [
    "apollo",
    "graphql",
    "hyperapp"
  ],
  "files": [
    "dist"
  ],
  "scripts": {
    "build:dist": "(rm -fr dist || true) && rollup -c",
    "build:docs": "(rm -fr docs || true) && parcel build src/docs/index.html -d docs --public-url /hyperapp-apollo",
    "build": "run-p build:*",
    "format": "prettier --parser typescript --write 'src/**/*.ts' --write 'src/**/*.tsx'",
    "lint:prettier": "prettier --parser typescript -l 'src/**/*.ts' --write 'src/**/*.tsx'",
    "lint:tslint": "tslint --project .",
    "lint": "run-p lint:*",
    "start": "parcel src/docs/index.html"
  },
  "dependencies": {
    "apollo-cache": "^1.1.7",
    "apollo-link": "^1.2.1",
    "fbjs": "^0.8.16",
    "hyperapp": "^1.2.5"
  },
  "devDependencies": {
    "@types/graphql": "^0.12.7",
    "apollo-boost": "^0.1.4",
    "apollo-client": "^2.2.8",
    "bulma": "^0.6.2",
    "graphql": "^0.13.2",
    "graphql-tag": "^2.8.0",
    "hyperapp": "^1.2.5",
    "hyperapp-hash-router": "^0.1.0",
    "node-sass": "^4.8.3",
    "npm-run-all": "^4.1.2",
    "parcel-bundler": "^1.7.0",
    "prettier": "^1.11.1",
    "rollup": "^0.57.1",
    "rollup-plugin-typescript2": "^0.12.0",
    "rollup-plugin-uglify": "^3.0.0",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.10.0",
    "typescript": "^2.8.1"
  },
  "peerDependencies": {
    "apollo-client": "^2.2.8",
    "graphql": "^0.13.2",
    "graphql-tag": "^2.8.0"
  },
  "prettier": {
    "printWidth": 120,
    "semi": false
  }
}
